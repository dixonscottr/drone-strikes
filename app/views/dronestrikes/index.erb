<div class="row">
<% @strikes.each do |strike| %>
  <div class="col s12 m2">
  <div class="card #006064 cyan darken-4 hoverable">
    <div class="card-content white-text">
      <span class="card-title">
        <a class='get-drone-info' href='<%= "/dronestrikes/#{strike.id}" %>'">
          <%= strike.strike_date %>
        </a>
      </span>
      <p><%= strike.country %> | <%=strike.total_deaths %> killed</p>
      <div class='additional-info'>

      </div>
    </div>
    </div>
  </div>
<% end %>
</div>
<div id="lightbox">
  <span id='close-button'>&times;</span>
  <div id='lightbox-content'>
  </div>
</div>
